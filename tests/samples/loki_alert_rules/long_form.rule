groups:
  - name: group1
    rules:
    - alert: CPUOverUse1
      expr: process_cpu_seconds_total > 0.11
      for: 0m
      labels:
        severity: Low
      annotations:
        summary: "Instance {{ $labels.instance }} CPU over use"
        description: "{{ $labels.instance }} of job {{ $labels.job }} has used too much CPU."
  - name: group2
    rules:
    - alert: CPUOverUse2
      expr: process_cpu_seconds_total > 0.22
      for: 0m
      labels:
        severity: Low
      annotations:
        summary: "Instance {{ $labels.instance }} CPU over use"
        description: "{{ $labels.instance }} of job {{ $labels.job }} has used too much CPU."
